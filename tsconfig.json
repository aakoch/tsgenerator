{
  "extends": "@tsconfig/node20/tsconfig.json",
  "module": "node16",
  "moduleResolution": "bundler",
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2023", "dom"],
    "rootDir": "src",
    "outDir": "build",
    "isolatedModules": true
  },
  "targets": {
    "index": {
      "source": "src/main/index.ts",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": false,
      "context": "node",
      "outputFormat": "esmodule"
    }
  }
  }
